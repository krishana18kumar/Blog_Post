<%- include('../partials/header'); -%>

<h1>EDIT BLOG</h1>

<div class="container" style="margin: 0 auto; float:none;">
    <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="form">
            <div class="form-group col-md-4">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" class="form-control" id="title" value="<%= blog.title%>">
            </div>
            <div class="form-group col-md-4">
                <label for="image">Image Url</label>
                <input type="text" name="blog[image]" class="form-control" id="image" value="<%= blog.image%>">
            </div>
            <div class="form-group col-md-4">
                <label for="body">Post Content</label>
                <textarea name="blog[body]" class="form-control" id="body" cols="58" rows="6"><%= blog.body%></textarea>
            </div>
            <div class="form-group col-md-3">
                <input type="submit" class="btn btn-primary" name="submit">
            </div>
        </div>
    </form>
</div>




<%- include('../partials/footer'); -%>