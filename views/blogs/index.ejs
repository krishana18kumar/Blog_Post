<%- include('../partials/header'); -%>
<h1>All Blogs</h1>
<div class="container">
    <% blogs.forEach(function(blog){ %>
    <div class="card mb-4 p-1 card-width">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%= blog.image %>" class="card-img img-responsive" alt="Image here">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title.substring(0, 400) %></h5>
                    <p class="card-text"><%= blog.body.substring(0, 150) %></p>
                    <p class="card-text">
                        <small class="text-muted">Last updated <%= blog.created.toDateString()%></small>
                    </p>
                    <a class="btn btn-primary" href="/blogs/<%= blog._id %>" role="button">Read More</a>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
</div>




<%- include('../partials/footer'); -%>