<%- include('../partials/header'); -%>
<h1>All Blogs</h1>


<% blogs.forEach(function(blog){ %>
<div class="container" style="display: flex; justify-content: center; align-items: center;">
    <div class="card mb-4" style="width: 700px; height40vh;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%= blog.image %>" class="card-img" alt="Image here"
                    style="max-height: 340px; width: 100%; height: 40vh; object-fit: cover;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title.substring(0, 400) %></h5>
                    <p class="card-text"><%= blog.body.substring(0, 150) %></p>
                    <p class="card-text">
                        <small class="text-muted">Last updated <%= blog.created.toDateString()%></small>
                    </p>
                    <a class="btn btn-primary" href="/blogs/<%= blog._id %>" role="button">Read More</a>
                </div>
            </div>
        </div>
    </div>
</div>
<% }); %>


<%- include('../partials/footer'); -%>