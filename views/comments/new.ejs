<%- include('../partials/header'); -%>

<h1>ADD NEW COMMENT</h1>
<div class="container" style="margin: 0 auto; float:none;">
    <form action="/blogs/<%= id %>/comments" method="POST">
        <div class="form">
            <div class="form-group col-md-4">
                <label for="title">Author</label>
                <input type="text" name="comment[author]" class="form-control" id="title" placeholder="Author Name">
            </div>
            <div class="form-group col-md-4">
                <label for="text">Comment</label>
                <input type="text" name="comment[text]" class="form-control" id="text" placeholder=" Add comment">
            </div>
            <div class="form-group col-md-3">
                <input type="submit" class="btn btn-primary" name="submit">
            </div>
        </div>
    </form>
</div>


<%- include('../partials/footer'); -%>